<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/signin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/user_profile"
        android:layout_width="330dp"
        android:layout_height="200dp"
        android:background="@drawable/edit_text_bg"
        android:backgroundTint="@color/teal_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/user_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/profile_picture"
        app:layout_constraintBottom_toBottomOf="@+id/user_profile"
        app:layout_constraintEnd_toEndOf="@+id/user_profile"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="@+id/user_profile"
        app:layout_constraintTop_toTopOf="@+id/user_profile"
        app:layout_constraintVertical_bias="0.37"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="330dp"
        android:layout_height="450dp"
        android:background="@drawable/edit_text_bg"
        android:backgroundTint="@color/teal_200"
        app:layout_constraintBottom_toBottomOf="@+id/edittext_license"
        app:layout_constraintEnd_toEndOf="@+id/edittext_username"
        app:layout_constraintStart_toStartOf="@+id/edittext_username"
        app:layout_constraintTop_toTopOf="@+id/edittext_fullname" />

    <TextView
        android:id="@+id/textview_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee"

        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/user_profile"
        app:layout_constraintEnd_toEndOf="@+id/user_profile"
        app:layout_constraintHorizontal_bias="0.207"
        app:layout_constraintStart_toEndOf="@+id/user_image"
        app:layout_constraintTop_toTopOf="@+id/user_profile"
        app:layout_constraintVertical_bias="0.191" />

    <TextView
        android:id="@+id/textview_fullname"
        android:layout_width="100dp"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="@+id/user_profile"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="@+id/textview_username"
        app:layout_constraintTop_toTopOf="@+id/textview_username"
        app:layout_constraintVertical_bias="0.35" />

    <ImageView
        android:id="@+id/edit_user_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/edit_icon"
        app:layout_constraintEnd_toEndOf="@+id/user_image"
        app:layout_constraintTop_toTopOf="@+id/user_image" />


    <EditText
        android:id="@+id/edittext_fullname"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/white"
        android:hint="Full Name"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/background"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toBottomOf="@+id/user_profile"
        android:background="@drawable/edit_text_bg"
        app:layout_constraintVertical_bias="0.05"/>

    <ImageView
        android:id="@+id/edit_fullname"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/edit_icon"
        app:layout_constraintBottom_toBottomOf="@+id/edittext_fullname"
        app:layout_constraintEnd_toEndOf="@+id/edittext_fullname"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/edittext_fullname"
        app:layout_constraintTop_toTopOf="@+id/edittext_fullname"
        app:layout_constraintVertical_bias="0.0" />


    <EditText
        android:id="@+id/edittext_username"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text_bg"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:hint="Username"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toBottomOf="@+id/edittext_fullname" />

    <ImageView
        android:id="@+id/edit_username"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/edit_icon"
        app:layout_constraintBottom_toBottomOf="@+id/edittext_username"
        app:layout_constraintEnd_toEndOf="@+id/edittext_username"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/edittext_username"
        app:layout_constraintTop_toTopOf="@+id/edittext_username"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/edittext_email"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/white"
        android:hint="Email"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toBottomOf="@+id/edittext_username"
        android:background="@drawable/edit_text_bg"
        app:layout_constraintVertical_bias="0.05"/>

    <ImageView
        android:id="@+id/edit_email"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/edit_icon"
        app:layout_constraintBottom_toBottomOf="@+id/edittext_email"
        app:layout_constraintEnd_toEndOf="@+id/edittext_email"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/edittext_email"
        app:layout_constraintTop_toTopOf="@+id/edittext_email"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/edittext_password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/white"
        android:hint="Password"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toBottomOf="@+id/edittext_email"
        android:background="@drawable/edit_text_bg"
        app:layout_constraintVertical_bias="0.05"/>


    <ImageView
        android:id="@+id/edit_password"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/edit_icon"
        app:layout_constraintBottom_toBottomOf="@+id/edittext_password"
        app:layout_constraintEnd_toEndOf="@+id/edittext_password"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/edittext_password"
        app:layout_constraintTop_toTopOf="@+id/edittext_password"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/edittext_mobile"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/white"
        android:hint="Mobile Number"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toBottomOf="@+id/edittext_password"
        android:background="@drawable/edit_text_bg"
        app:layout_constraintVertical_bias="0.05"/>

    <EditText
        android:id="@+id/edittext_license"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/white"
        android:hint="Driving License"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toBottomOf="@+id/edittext_mobile"
        android:background="@drawable/edit_text_bg"
        app:layout_constraintVertical_bias="0.05"/>

    <ImageView
        android:id="@+id/edit_license"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/edit_icon"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/edittext_license"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/edittext_license"
        app:layout_constraintTop_toTopOf="@+id/edittext_license"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/edit_mobile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/edit_icon"
        app:layout_constraintBottom_toBottomOf="@+id/edittext_mobile"
        app:layout_constraintEnd_toEndOf="@+id/edittext_mobile"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/edittext_mobile"
        app:layout_constraintTop_toTopOf="@+id/edittext_mobile"
        app:layout_constraintVertical_bias="0.0" />

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintBottom_toTopOf="@+id/update_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittext_license" />

    <Button
        android:id="@+id/update_button"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:text="Update"
        android:textSize="16sp"
        android:backgroundTint="@color/light_sea_green"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintTop_toBottomOf="@id/progressbar" />

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Logout"
        app:layout_constraintBottom_toBottomOf="@+id/user_profile"
        app:layout_constraintEnd_toEndOf="@+id/user_profile"
        app:layout_constraintHorizontal_bias="0.097"
        app:layout_constraintStart_toStartOf="@+id/user_profile"
        app:layout_constraintTop_toTopOf="@+id/user_profile"
        app:layout_constraintVertical_bias="0.953" />

    <Button
        android:id="@+id/welcomepage_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Main Page"
        app:layout_constraintBottom_toBottomOf="@+id/user_profile"
        app:layout_constraintEnd_toEndOf="@+id/user_profile"
        app:layout_constraintHorizontal_bias="0.929"
        app:layout_constraintStart_toStartOf="@+id/user_profile"
        app:layout_constraintTop_toTopOf="@+id/user_profile"
        app:layout_constraintVertical_bias="0.953" />


</androidx.constraintlayout.widget.ConstraintLayout>